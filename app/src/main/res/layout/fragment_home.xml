<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.CoinsFragment"
    android:orientation="vertical"
   >


    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtwelcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Welcome to Crypto Deals "
            android:textColor="@color/white"
            android:textSize="25dp"
           />

        <TextView
            android:layout_below="@+id/txtwelcome"
            android:id="@+id/txtusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Username and surname"
            android:textColor="@color/white"
            android:textSize="30dp" />
    </RelativeLayout>



    <com.google.android.material.card.MaterialCardView
        android:layout_width="390dp"
        android:layout_height="220dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:background="@color/card"
        android:elevation="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

        <ImageView
            android:id="@+id/logobtc"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/btclogo"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/btc"
            android:layout_marginTop="10dp"
            android:paddingTop="10dp"
            android:gravity="center_horizontal"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="BTC"
            android:layout_marginStart="20dp"
            android:textSize="20dp"
            android:layout_below="@+id/logobtc"
            />

            <TextView
                android:id="@+id/txtbtc"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Bitcoin"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                android:layout_below="@+id/btc"
                />

            <TextView
                android:id="@+id/price"
                android:layout_marginTop="110dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="15.577,71€"
                android:textSize="30dp"
                android:layout_toRightOf="@id/btc"
                />
            <TextView
                android:paddingTop="10dp"
                android:gravity="center"
                android:paddingStart="40dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="+50€ (20%)"
                android:textSize="20dp"
                android:layout_below="@+id/price"
                android:layout_toRightOf="@+id/txtbtc"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        android:layout_width="390dp"
        android:layout_height="220dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="8dp"
        android:background="@color/card"
        android:elevation="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/logoeth"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:src="@drawable/ethlogo"
                android:scaleType="fitCenter"
                />

            <TextView
                android:id="@+id/eth"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:text="ETH"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                android:layout_below="@+id/logoeth"
                />

            <TextView
                android:id="@+id/txteth"
                android:layout_marginTop="10dp"
                android:paddingTop="10dp"
                android:gravity="center_horizontal"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="Etherum"
                android:layout_marginStart="20dp"
                android:textSize="20dp"
                android:layout_below="@+id/eth"
                />

            <TextView
                android:id="@+id/priceeth"
                android:layout_marginTop="110dp"
                android:paddingTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="15.577,71€"
                android:textSize="30dp"
                android:layout_toRightOf="@id/eth"
                />
            <TextView
                android:paddingTop="10dp"
                android:gravity="center"
                android:paddingStart="40dp"
                android:paddingBottom="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="+50€ (20%)"
                android:textSize="20dp"
                android:layout_below="@+id/priceeth"
                android:layout_toRightOf="@+id/eth"
                />
        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>