<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CoinsFragment">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card_view_profile"
        android:layout_margin="8dp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="10dp"
        card_view:contentPadding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/prLogo"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_baseline_account_circle_24"
                />

            <TextView
                android:layout_width="290dp"
                android:layout_height="wrap_content"
                android:id="@+id/prwelcome"
                android:layout_toRightOf="@+id/prLogo"
                android:layout_alignParentTop="true"
                android:textSize="30sp"
                android:hint="Welcome Back"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/prname"
                android:layout_toRightOf="@+id/prLogo"
                android:layout_below="@+id/prwelcome"
                android:textSize="25dp"
                android:hint="Kike"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


    <RelativeLayout
        android:paddingTop="50dp"
        android:layout_below="@+id/card_view_profile"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <ImageView
            android:id="@+id/cryptologo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:id="@+id/cryptoname"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/cryptologo"
            android:hint="Bitcoin"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cryptoprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cryptoname"
            android:layout_toRightOf="@+id/cryptologo"
            android:hint="1.000.000" />

    </RelativeLayout>


</RelativeLayout>